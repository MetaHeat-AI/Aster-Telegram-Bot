# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# ======================
# REQUIRED CONFIGURATION
# ======================

# Telegram Bot Token (get from @BotFather)
TG_BOT_TOKEN=your_telegram_bot_token_here

# Admin Telegram User IDs (comma-separated)
ADMIN_IDS=123456789,987654321

# Encryption Key (must be at least 32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this

# ======================
# DATABASE CONFIGURATION
# ======================

# PostgreSQL Password
POSTGRES_PASSWORD=secure_database_password_change_me

# Redis Password  
REDIS_PASSWORD=secure_redis_password_change_me

# ======================
# API CONFIGURATION
# ======================

# Aster API Base URL (default is usually correct)
ASTER_BASE_URL=https://api.aster.exchange

# ======================
# OPTIONAL ADMIN TOOLS
# ======================

# pgAdmin Password (only if using admin profile)
PGADMIN_PASSWORD=secure_pgadmin_password_change_me

# Redis Commander Password (only if using admin profile)
REDIS_COMMANDER_PASSWORD=secure_redis_commander_password_change_me

# ======================
# PRODUCTION SETTINGS
# ======================

# Set to 'production' for production deployment
NODE_ENV=production

# Logging level (error, warn, info, debug)
LOG_LEVEL=info