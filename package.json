{
  "name": "aster-bot",
  "version": "1.0.0",
  "description": "Production-grade Telegram bot for Aster DEX Perp trading",
  "main": "src/main.ts",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun --watch run src/main.ts",
    "lint": "eslint src/**/*.ts",
    "test": "bun test",
    "conform": "bun run tools/conformance.ts",
    "sig:vectors": "bun run tools/signature_vectors.ts",
    "test:parser": "bun run tools/fuzz_parser.test.ts",
    "test:priceguard": "bun run src/priceguard.spec.ts",
    "test:all": "bun run sig:vectors && bun run test:parser && bun run test:priceguard",
    "audit:full": "bun run conform && bun run test:all"
  },
  "keywords": [
    "telegram",
    "bot",
    "aster",
    "dex",
    "trading",
    "perp"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "telegraf": "^4.15.6",
    "zod": "^3.22.4",
    "typescript": "^5.3.3",
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0"
  }
}
