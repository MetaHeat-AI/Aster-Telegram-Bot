{
  "name": "aster-bot",
  "version": "1.0.0",
  "description": "Production-grade Telegram bot for Aster DEX Perp trading",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "watch": "ts-node --watch src/bot.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "conform": "ts-node tools/conformance.ts",
    "sig:vectors": "ts-node tools/signature_vectors.ts",
    "test:parser": "ts-node tools/fuzz_parser.test.ts",
    "test:priceguard": "ts-node src/priceguard.spec.ts",
    "test:all": "npm run sig:vectors && npm run test:parser && npm run test:priceguard",
    "audit:full": "npm run conform && npm run test:all"
  },
  "keywords": [
    "telegram",
    "bot",
    "aster",
    "dex",
    "trading",
    "perp"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "telegraf": "^4.15.6",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
